{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb/base",
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "double"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}